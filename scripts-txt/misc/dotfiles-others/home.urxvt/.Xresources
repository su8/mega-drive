! vim: set filetype=xdefaults :

URxvt.perl-ext-common : default,keyboard-select,url-select,clipboard,matcher

URxvt.keysym.M-x		: perl:keyboard-select:activate
URxvt.keysym.M-u           	: perl:url-select:select_next
!URxvt.keysym.M-c        	: perl:clipboard:copy
!URxvt.keysym.M-v		: perl:clipboard:paste
URxvt.keysym.M-s           	: perl:keyboard-select:search
!URxvt.keysym.M-C-v         	: perl:clipboard:paste_escaped
URxvt.url-select.autocopy  	: true
URxvt.url-select.underline 	: true
URxvt.keysym.Shift-Control-V	: perl:clipboard:paste
URxvt.keysym.Shift-Control-C	: perl:clipboard:copy



!URxvt.url-launcher		: /usr/bin/qutebrowser
!URxvt.matcher.button		: 1

URxvt.geometry			: 80x24

URxvt.font        		: xft:DejaVu Sans Mono:pixelsize=11
URxvt.boldfont        		: xft:DejaVu Sans Mono:pixelsize=13
URxvt.letterSpace 		: -1
URxvt.termName    		: rxvt-256color
URxvt.iso14755    		: false
URxvt.cursorColor 		: #0f6578
URxvt.colorIT			: #87af5f
URxvt.colorBD			: #d7d7d7
URxvt.colorUL			: #87afd7

URxvt.urgentOnBell		: true

URxvt.saveLines   		: 12000
URxvt.scrollBar   		: false
URxvt.scrollstyle 		: rxvt

!XFT
!Xft.lcdfilter 			: lcddefault
!Xft.hintstyle 			: hintmedium
!Xft.hinting   			: 1
!Xft.antialias 			: 1
!Xft.rgba      			: rgb
!Xft.autohint			: 0
!Xft.dpi:        96

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

!Con transparencia nativa
!URxvt*.depth: 32
!URxvt*.background: [75]#000000

